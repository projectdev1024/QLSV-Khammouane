@model WebsiteMVC.Models.TinTuc

@{
    ViewBag.Title = "Tin tức";
    Layout = "~/Areas/AdminCP/Views/Shared/_LayoutAmin.cshtml";
}

@using (Html.BeginForm("Edit","TinTuc",FormMethod.Post,new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDTinTuc)
        @Html.HiddenFor(model => model.CreateBy)
        @Html.HiddenFor(model => model.CreateTime)
        @Html.HiddenFor(model => model.Active)

        <div class="form-group">
            @Html.LabelFor(model => model.Image, "Hình đại diện", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="name" value="" />
                <br />
                <img src="@Model.Image" alt="" />
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.TieuDe, "Tiêu đề", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TieuDe, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TomTat, "Tóm tắt", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TomTat, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NoiDung, "Nội dung", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <textarea name="NoiDung" class="ckeditor">@Html.Raw(Model.NoiDung)</textarea>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CountView, "Lượt xem", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CountView, new { htmlAttributes = new { @class = "form-control", type = "number" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LinkFile, "File đính kèm (nếu có)", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LinkFile, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ThongBao, " ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <label><input type="checkbox" name="ThongBao" id="ThongBao" value="true"  /> Thông báo?</label>
                @if(Model.ThongBao == true)
                {
                <script>
                    $("#ThongBao")[0].checked = true;
                </script>
                }
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<script src="~/Content/theme/assets/global/plugins/ckeditor/ckeditor.js"></script>