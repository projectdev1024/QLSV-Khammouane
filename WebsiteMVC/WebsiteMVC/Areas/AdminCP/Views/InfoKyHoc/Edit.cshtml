@model WebsiteMVC.Models.InfoKyHoc

@{
    ViewBag.Title = "THÔNG TIN KỲ HỌC";
    Layout = "~/Areas/AdminCP/Views/Shared/_LayoutAmin.cshtml";
}
<div class="panel panel-default">
    <div class="panel-heading"><i class="fa fa-pencil"></i> @ViewBag.Title</div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.IDInfoKyHoc)
                @Html.HiddenFor(model => model.Status)

                <div class="form-group">
                    @Html.LabelFor(model => model.IDNamHoc, "Năm học", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(q => q.IDNamHoc, ViewBag.IDNamHocs as SelectList, "-------------", htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IDKyHoc, "Kỳ học", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(q => q.IDKyHoc, ViewBag.IDKyHocs as SelectList, "-------------", htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PhiTC, "Học phí", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-3">
                        <div class="input-group">
                            @Html.EditorFor(model => model.PhiTC, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                            <span class="input-group-addon" id="basic-addon1">VND/TC</span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>